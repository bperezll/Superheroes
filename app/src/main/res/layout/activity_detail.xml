<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/superheroNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Superhero name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/superheroPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        tools:src="@drawable/Batman639"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/superheroFirstAppearanceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="First appearance"/>

    <TextView
        android:id="@+id/superheroPublisherTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        tools:text="Publisher"/>

</LinearLayout>